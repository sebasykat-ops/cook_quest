{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node"
    ],
    "baseUrl": "./src",
    "paths": {
      "@shared/*": [
        "shared-kernel/*"
      ],
      "@recipe-catalog/*": [
        "recipe-catalog/*"
      ],
      "@mission-execution/*": [
        "mission-execution/*"
      ],
      "@safety-guidance/*": [
        "safety-guidance/*"
      ],
      "@user-progress/*": [
        "user-progress/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}